# ================================================
# Production Environment Variables
# ================================================
# Copy this file to .env.production and fill in real values
# NEVER commit .env.production to git!

# ================================================
# Database Configuration
# ================================================
DATABASE_URL=postgresql://delivery_user:YOUR_STRONG_PASSWORD@localhost:5432/delivery_db
# For remote database (e.g., Supabase, Neon, etc.):
# DATABASE_URL=postgresql://user:password@db.example.com:5432/delivery_db?sslmode=require

# ================================================
# Server Configuration
# ================================================
NODE_ENV=production
PORT=3001

# ================================================
# Security - CHANGE THESE!
# ================================================
# Generate a strong JWT secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_A_64_CHARACTER_RANDOM_STRING
JWT_EXPIRES_IN=7d

# Cookie settings
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict

# ================================================
# Frontend URL (for CORS)
# ================================================
FRONTEND_URL=https://yourdomain.com

# ================================================
# Rate Limiting
# ================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# ================================================
# Optional: External Services
# ================================================
# Google Maps API (for geocoding)
# GOOGLE_MAPS_API_KEY=your_api_key_here

# WhatsApp Business API (for notifications)
# WHATSAPP_API_URL=https://api.whatsapp.com/v1
# WHATSAPP_API_TOKEN=your_token_here

# SMS Gateway (for notifications)
# SMS_API_URL=https://sms.gateway.com/api
# SMS_API_KEY=your_api_key_here

# ================================================
# Logging
# ================================================
LOG_LEVEL=info
# LOG_FILE=/var/log/delivery-api/app.log
